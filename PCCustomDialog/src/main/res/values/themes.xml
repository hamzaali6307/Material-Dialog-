<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--cardview properties-->
    <style name="MaterialCustomDialogCardView" parent="Theme.MaterialComponents.Light">
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:clipToPadding">true</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardCornerRadius">@dimen/_15sdp</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!--TextView properties-->
    <style name="MaterialCustomDialogTextView" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!--Button properties-->
    <style name="MaterialCustomDialogButton" parent="Theme.MaterialComponents.Light">
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="cornerRadius">@dimen/_30sdp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!--images animation -->
    <style name="loadingStyle" parent="ThemeOverlay.Material3">
        <item name="lottie_autoPlay">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="lottie_loop">true</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>